<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/recipeListFragment">

    <fragment
        android:id="@+id/recipeListFragment"
        android:name="be.ehb.cookme.fragments.recipe.RecipeListFragment"
        android:label="Recipe List"
        tools:layout="@layout/fragment_recipe_list">
        <action
            android:id="@+id/action_recipeListFragment_to_detailRecipeListFragment"
            app:destination="@id/detailRecipeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="be.ehb.cookme.fragments.shopping.ShoppingListFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shopping_list">
    </fragment>
    <fragment
        android:id="@+id/shoppingMapFragment"
        android:name="be.ehb.cookme.fragments.ShoppingMapFragment"
        android:label="Nearby Markets"
        tools:layout="@layout/fragment_shopping_map" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="be.ehb.cookme.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/detailShoppingListFragment"
        android:name="be.ehb.cookme.fragments.shopping.DetailShoppingListFragment"
        android:label="Shopping Details"
        tools:layout="@layout/fragment_detail_shopping_list" />
    <fragment
        android:id="@+id/detailRecipeListFragment"
        android:name="be.ehb.cookme.fragments.recipe.DetailRecipeListFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_detail_recipe_list" />
</navigation>